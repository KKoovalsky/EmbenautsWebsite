---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div>
        <strong style="color:var(--blue);">Embenauts</strong>
        <span style="color:var(--muted); margin-left:0.75rem;">
          Embedded · CMake · Toolchains
        </span>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
